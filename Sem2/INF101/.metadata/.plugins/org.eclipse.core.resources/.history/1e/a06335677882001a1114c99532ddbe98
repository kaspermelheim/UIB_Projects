package inf101.v20.sem2.game;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class Connect4 {
	
	final int height = 8;
	final int width = 8;
	int totalMoves;
	int[][] board;
	
	public Connect4() {
		board = new int[height][width];
		totalMoves = 0;
	}
	
	public static void main(String args[]) throws IOException {
		Connect4 C4Game = new Connect4();
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		System.out.println("Welcome to C4!");
		
		outer:
			while(true) {
				int column = 0;
				//Player1
				while(true) {
					System.out.println("Player 1 play:");
					column = Integer.parseInt(br.readLine());
				}
			}
	}

	public String checkVictory() {
		// TODO Auto-generated method stub
		return null;
	}

	public place(int column, int playerNum) {
		int i = 0;
		
		for(i = 0; i < height; i++) {
			
			if(board[i][column] == 1 || board[i][column] == 2) {
				board[i-1][column] = playerNum;
				break;
			}
		}
		
		if(i == height) {
			board[i-1][column] = playerNum;
		}
		
		totalMoves++;
		return isConnected(i-1, column);
	}
	
	public boolean isPlayable(int column) {
		return board[0][column] == 0;
	}
	
	public boolean isFull() {
		return totalMoves == height * width;
	}

	public boolean isConnected(int x, int y) {

		int num = board[x][y];
		int count = 0;
		int i = y;
		
		//Horizontal check
		while(i < width && board[x][i] == num) {
			count++;
			i++;
		}
		
		i = y-1;
		while(i >= 0 && board[x][i] == num) {
			count++;
			i--;
		}
		
		if(count == 4) {
			return true;
		}
		
		
		
		return false;
	}

	public void updateBoard() {

		for(int i = 0; i < board.length; i++) {
			
			for(int j = 0; j < board[0].length; j++) {
				
				if(board[i][j] == 0) {
					System.out.println("_  ");
				}
				else {
					System.out.println(board[i][j] + "  ");
				}
			}
			System.out.println();
		}
		
		for(int i = 0; i < width; i++) {
			System.out.println("*  ");
		}
		System.out.println();
		
		for(int i = 0; i < width; i++) {
			System.out.println(i + "  ");
		}
		System.out.println();
		
	}

	@Override
	public void runSingleplayer() {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void runMultiplayer() {
		// TODO Auto-generated method stub
		
	}

	
}
